<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MTMChampo.Views.Register"
              Title="">
    <ScrollView>
        <StackLayout BackgroundColor="#82303e" Spacing="25" Padding="30">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="design.png" HeightRequest="45" WidthRequest="45" Grid.Column="0" VerticalOptions="Center"/>

                <Label Text=" REGISTER " Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Start" TextColor="White" FontSize="35" FontFamily="Arial" />
            </Grid>

                    
            <BoxView BackgroundColor="#E85454" HeightRequest="2" />

            <Label Text="Nombre de usuario:" VerticalOptions="Center" TextColor="White" FontFamily="Arial" />
            <Entry x:Name="usernameEntry" Placeholder="Ingrese su nombre de usuario"  TextColor="White" />

            <BoxView BackgroundColor="#E85454" HeightRequest="2" />

            <Label Text="Contraseña:" VerticalOptions="Center" TextColor="White" FontFamily="Arial"/>
            <Entry x:Name="passwordEntry" Placeholder="Ingrese su contraseña" IsPassword="True"  TextColor="White" />

            <BoxView BackgroundColor="#E85454" HeightRequest="2" />

            <Button Text="Registrarse" Clicked="RegisterR_Clicked" BackgroundColor="White" TextColor="#E85454" FontFamily="Arial"/>
            <Button Text="Iniciar Sesion" Clicked="InicioR_Clicked" BackgroundColor="White" TextColor="#E85454" FontFamily="Arial"/>
            
            
            <Label Text="Si ya tienes una cuenta inicia sesion" VerticalOptions="Center" HorizontalOptions="Center" TextColor="White" FontFamily="Arial"/>

        </StackLayout>
    </ScrollView>
</ContentPage>