<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MTMChampo.Views.EditarCuentaPage"
             Title="">
    <StackLayout BackgroundColor="#82303e" Padding="20">

        <Label Text="Número de Cuenta:" FontSize="Medium" />
        <Entry x:Name="numeroCuentaEntry" Placeholder="Ingrese el número de cuenta" />

        <Label Text="Nombre del Titular:" FontSize="Medium" />
        <Entry x:Name="nombreTitularEntry" Placeholder="Ingrese el nombre del titular" />

        <Label Text="Saldo:" FontSize="Medium" />
        <Entry x:Name="saldoEntry" Placeholder="Ingrese el saldo" Keyboard="Numeric" />

        <Label Text="Tipo de Cuenta:" FontSize="Medium" />
        <Entry x:Name="tipoCuentaEntry" Placeholder="Ingrese el tipo de cuenta"  />

        <Button Text="Guardar Cambios" Clicked="GuardarCambios_Clicked" BackgroundColor="White" TextColor="#E85454" FontFamily="Arial" />

    </StackLayout>
</ContentPage>